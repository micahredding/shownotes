<%= form_for @list do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <ul>
    <%= f.fields_for :items do |i| %>
      <li>
        <%= i.text_field :description %><br />
        <%= i.text_field :links %>
      </li>
    <% end %>

    <%= f.fields_for :items, Item.new do |i| %>
      <li>
        <%= i.text_field :description %><br />
        <%= i.text_field :links %>
      </li>
    <% end %>

  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
