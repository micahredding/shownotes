<%= form_tag forgot_password_path do %>
  <fieldset>
    <legend>Forgot Password</legend>

    <%= label_tag :email, 'Enter the email you used to register' %>
    <%= email_field_tag :email, params[:email] %>

    <%= submit_tag 'Submit' %>
    <%= link_to 'Cancel', login_path %>
  </fieldset>
<%- end -%>
